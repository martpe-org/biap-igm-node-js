    "test": "npm run lint && npm run build && npm run test:unit && npm run test:supertest",
    "test:all": "jest",
    "test:unit": "jest \"./tests/unit/\"",
    "test:supertest": "jest \"./tests/integration/\"",
    "postinstall": "husky install"
